<% layout('layouts/boilerplate') -%>
<h1>New Post</h1>

<!--enctype="multipart/form-data"  === this is a dependency that
    multr needs to parse things into a usable file so were can broaden
    then access
-->
<form action="/posts" method="POST" enctype="multipart/form-data">
    <div>
         <input type="text" name="post[title]" placeholder="Title">
    </div>
    <div>
         <input type="number" name="post[price]" step=".01" placeholder="Price">
    </div>
    <div>
        <!--name is from the router so it matches
            multiple is like the require attribute
            It is going to allow users to click on images
            from the little pop up
        -->
        <input type="file" accept="images/*" name="images" multiple />
    </div>
    <div>
         <textarea name="post[description]"  placeholder="Description"></textarea>
    </div>
    <div>
        <input type="text" name="post[location]" placeholder="Location">
    </div>
   
    <input type="submit">
</form>

<!--
    title: String,
    price: String,
    description: String,
    location: String
-->